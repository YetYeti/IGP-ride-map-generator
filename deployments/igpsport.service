[Unit]
Description=IGPSPORT Ride Map Generator
After=network.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/igpsport

# 环境变量文件
EnvironmentFile=/opt/igpsport/.env

# Node.js 启动命令
ExecStart=/usr/local/node/bin/node /opt/igpsport/.next/standalone/server.js

# 重启策略
Restart=always
RestartSec=10

# 资源限制
LimitNOFILE=65535
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
